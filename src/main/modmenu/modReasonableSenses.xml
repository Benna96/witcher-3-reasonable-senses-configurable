					<Option id="1" displayName="rsense_highlight_WhenEmpty"><Entry varId="trophyStandHighlight" value="1"/></Option>
					<Option id="2" displayName="rsense_highlight_Always"><Entry varId="trophyStandHighlight" value="2"/></Option>
