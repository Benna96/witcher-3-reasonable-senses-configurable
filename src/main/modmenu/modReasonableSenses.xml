		<VisibleVars>
			<Var id="doorHighlight" displayName="rsense_doorsHighlight" displayType="TOGGLE"/>
			<Var id="explosiveBarrelHighlight" displayName="rsense_explosiveBarrelsHighlight" displayType="TOGGLE"/>
			<Var id="posterHighlight" displayName="rsense_postersHighlight" displayType="TOGGLE"/>
