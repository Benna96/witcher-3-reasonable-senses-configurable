					<Option id="0" displayName="rsense_highlight_Never"><Entry varId="clueHighlight" value="0"/></Option>
					<Option id="1" displayName="rsense_highlight_UnexaminedOnly"><Entry varId="clueHighlight" value="1"/></Option>
					<Option id="2" displayName="rsense_highlight_Always"><Entry varId="clueHighlight" value="2"/></Option>
